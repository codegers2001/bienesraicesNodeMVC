extends ../layouts/index

block content
  div
    h1(class='text-4xl text-center font-extrabold dark:text-white') Bienes
      span(class='text-indigo-600 font-medium dark:text-cyan-500') Raices
    h2(class='text-center text-2xl text-gray-700 mt-6 font-bold dark:text-white')= pagina
    if errores
      div(class='max-w-md mx-auto')
        each error in errores
          p(class='bg-red-100 border-l-4 border-red-500 text-red-700 text-center text-sm dark:bg-red-500 dark:text-gray-100 mt-4 p-4 bottom-6 right-3 rounded-lg')= error.msg

    div(class='mt-8 max-w-md mx-auto p-6')
      div(class='bg-white shadow rounded-lg overflow-hidden dark:bg-gray-700')
        form(action='/auth/crear-cuenta' method='POST' class='space-y-6 p-6' id='formulario')
          div.mb-6
            label(class='block text-gray-700 text-sm mb-2  font-bold uppercase  dark:text-gray-50')(for='nombre') Nombre
            input#nombre(class='appearance-none border border-gray-200 p-3 w-full rounded-md outline-none dark:bg-gray-600 dark:border-gray-500 dark:text-gray-100', type='text' name='nombre', value='#{value.nombre}')

          div.mb-6
            label(class='block text-gray-700 text-sm uppercase mb-2   font-bold dark:text-gray-50')(for='email') Email
            input#email(class='appearance-none border border-gray-200 p-3 w-full rounded-md outline-none dark:bg-gray-600 dark:border-gray-500 dark:text-gray-100' type='text' name='email')
          div.mb-6
            label(class='block text-gray-700 text-sm uppercase mb-2   font-bold dark:text-gray-50')(for='password') Password
            input#password(class='appearance-none border border-gray-200 p-3 w-full rounded-md outline-none dark:bg-gray-600 dark:border-gray-500 dark:text-gray-100' type='password' name='password')
          div.mb-6
            label(class='block text-gray-700 text-sm uppercase mb-2   font-bold dark:text-gray-50')(for='confirmar') Confirmar Password
            input#confirmar(class='appearance-none border border-gray-200 p-3 w-full rounded-md outline-none dark:bg-gray-600 dark:border-gray-500 dark:text-gray-100' type='password' name='confirmPassword')

            div(class='flex items-center justify-between mt-4')
              a(class='text-indigo-600 dark:text-cyan-400 hover:text-indigo-500 dark:hover:text-cyan-300 text-sm')(href='/auth/login') Iniciar Sesión

              a(class='text-indigo-600 dark:text-cyan-400 hover:text-indigo-500 dark:hover:text-cyan-500 text-sm')(href='/auth/olvide-password') Recuperar Contraseña

            input(class='bg-indigo-600 bg-indigo-700 text-white font-bold py-3 px-4.rounded-md cursor-pointer w-full mt-6 dark:bg-cyan-700 dark:gray-100')(type='submit' value='Crear Cuenta')







